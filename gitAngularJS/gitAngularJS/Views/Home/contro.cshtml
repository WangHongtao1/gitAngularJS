@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/content/angular.min.js"></script>
    <meta name="viewport" content="width=device-width" charset="utf-8" />
    <title>angularjs-controller</title>
</head>
<body>
    <div ng-app="mainApp" ng-controller="studentController">
        Enter first name：<input type="text" ng-model="student.fristName" /><br />
        Enter first name: <input type="text" ng-model="student.LastName" /><br />
        Your name :{{student.fullName()}}
        
    
    
    </div>
    <script>
        var mainApp = angular.module("mainApp", []);
        mainApp.controller("studentController",function($scope){
            $scope.student = {
                fristName: "Mamesh",
                LastName: "Parasher",

                fullName: function () {
                    var studentObject;
                    studentObject = $scope.student;
                    return studentObject.fristName + '' + studentObject.LastName;
                }
            };
        }   );
    </script>
</body>
</html>
